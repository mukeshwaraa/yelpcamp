<% layout('../boilerplate/boilerplate') -%>
<div class="container">
<form class="row g-3 needs-validation" method="POST" action="/camps/<%= camp.id %>/edit?_method=PUT" novalidate enctype="multipart/form-data">
    <div class="col-8 offset-2" >
    <h1 class="text-center">Edit your Campground</h1>
    <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Name</label>
    <input type="text" class="form-control" value="<%= camp.name %>" id="exampleInputEmail1" name="campground[name]" required>
    <div class="valid-feedback">
        Looks good!
      </div> 
      <div class="invalid-feedback">
        Please choose a name For your Camp
      </div>
  </div>
      <div class="mb-3">
        
        <label for="price" class="form-label">Price</label>
      <div class="input-group mb-3" >
        <span class="input-group-text">â‚¹</span>
        <input type="number" class="form-control" required id="price" min="0" name="campground[price]"  value="<%= camp.price %>" aria-label="Amount (to the nearest dollar)">
        <span class="input-group-text">.00</span>
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Is this awesome camp available for free
          </div>
    </div>
    </div><div class="row mb-3">
      <div class="col-4">
        <label for="inputAddress1" class="form-label">City</label>
        <input type="text" class="form-control" id="inputAddress1" required name="address[city]" value="<%= camp.location.city %>" placeholder="1234 Main St">
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please tell us where we can find your Camp
        </div>
      </div>
      <div class="col-4">
        <label for="inputAddress2" class="form-label">State</label>
        <input type="text" class="form-control" id="inputAddress2" required name="address[state]" value="<%= camp.location.state %>" placeholder="1234 Main St">
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please tell us where we can find your Camp
        </div>
      </div>
      <div class="col-4">
        <label for="inputAddress3" class="form-label">Country</label>
        <input type="text" class="form-control" id="inputAddress3" required name="address[country]" value="<%= camp.location.country %>" placeholder="1234 Main St">
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please tell us where we can find your Camp
        </div>
      </div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea  class="form-control" id="description"  required name="campground[description]" rows="3"><%= camp.description %></textarea>
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please tell us about your Camp
          </div>  
    </div>
    <div class="mb-3">
      <% camp.images.forEach((img,i) =>{ %>
        <div class="mb-1">
          <input  type="checkbox" value="<%= img.filename %>" name="deleteImages[]" id="<%= i %>">
            <label for="<%= i %>">Delete Image</label>

            <img src="<%= img.thumbnailURL %>" class="img-thumbnail" alt="">
            
          </div>
        <% }) %>
    </div>
    <div class="mb-3 col-12 ">
        <label for="image" class="form-label">Add Image</label>
        <input type="file" class="form-control" id="image" multiple name="image" >
         <div class="maxImages">
          Maximum 3 images Only Allowed
         </div>  
    </div>
    <div class="col-12 mb-3">
      <button type="submit" class="btn btn-success col-6 offset-3 p-2">Submit</button>
    </div>
  </form>
</div>
</div>