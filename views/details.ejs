<% layout('../boilerplate/boilerplate') -%>
<div class="container" >
<div class="card mb-3">
    
      <div class="card-header d-flex justify-content-center  mb-1 rounded " >
        <h3 class="card-title"><%= camp.name %></h3>
      </div>
      <div class="p-2">
      <div class="text-center">
        <img src="<%= camp.image %>" class="rounded" alt="..." style="width: 50vw; max-height: 50vh;" >
      </div>
      <div class="d-flex flex-column">
        <div class="card-body d-flex flex-column justify-content-between">
           <p class="card-text "><%= camp.description %></p>
           <h3 class="card-title"><%= camp.location %></h3>
          <h4 class="card-text text-muted"><small class="text-body-secondary">$<%= camp.price %> per night</small></h4>
        </div>  
      </div>
      <div class="row">
      <form class="d-inline col-6" action="/camps/<%= camp.id%>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger col-12">Delete Campground</button>
      </form>
        <a href="/camps/<%= camp.id%>/edit" class="btn btn-info col-6">Edit Campground</a>
      </div>
    </div>
  </div>
</div>