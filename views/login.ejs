<% layout('../boilerplate/boilerplate') -%>
<div class="container">
<form class="row g-3 needs-validation " method="POST" action="/camps/login" novalidate>
    <div class="col-8 offset-2" >
    <h1 class="text-center">Login into your Account</h1>
    <div class="mb-3 col-12">
    <label for="exampleInputEmail1" class="form-label">Name</label>
    <input type="text" class="form-control uniqueUser" id="exampleInputEmail1" name="username" required>
    <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Please choose a username For your Account
      </div>
  </div>
    <div class="mb-3 col-12 ">
        <label for="image" class="form-label">password</label>
        <input type="password" class="form-control" id="image" name="password" required>
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please input a password
          </div>  
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-success col-6 offset-3">Add Your Campground</button>
    </div>
  </form>
</div>
</div>