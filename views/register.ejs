<% layout('../boilerplate/boilerplate') -%>
<div class="container">
<form class="row g-3 needs-validation " method="POST" action="/camps/register" novalidate>
    <div class="col-8 offset-2" >
    <h1 class="text-center">Register your Account</h1>
    <div class="mb-3 col-12">
    <label for="exampleInputEmail1" class="form-label">Name</label>
    <input type="text" class="form-control" id="exampleInputEmail1" name="user[username]" required>
    <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Please choose a username For your Account
      </div>
  </div>
    <div class="col-12 mb-3">
      <label for="inputAddress" class="form-label">Email</label>
      <input type="email" class="form-control" id="inputAddress" required name="user[email]" placeholder="name@example.com">
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Please provide your email 
      </div>
    </div>
    <div class="mb-3 col-12 ">
        <label for="image" class="form-label">password</label>
        <input type="password" class="form-control" id="image" name="user[password]" required>
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please input a password
          </div>  
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-success col-6 offset-3 p-2">Add Your Account</button>
    </div>
  </form>
</div>
</div>